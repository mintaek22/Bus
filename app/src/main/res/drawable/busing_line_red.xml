<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white">
            </solid>
            <size android:height="8dp"
                android:width="8dp">
            </size>
        </shape>
    </item>
    <item android:width="1dp" android:height="12dp"
        android:start="4dp" android:end="4dp" android:gravity="center" >
        <shape android:shape="rectangle">
            <solid
                android:color="#F40505">
            </solid>
        </shape>
    </item>
    <item android:drawable="@drawable/bus_image"
        android:gravity="center_horizontal"
        android:width="6dp"
        android:height="6dp">
    </item>
    <item android:width="1dp" android:height="1dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid
                android:color="@color/white">
            </solid>
        </shape>
    </item>
</layer-list>

